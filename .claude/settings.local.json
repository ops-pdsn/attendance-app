      "Bash(timeout:*)",
      "Bash(if [ -f .env ])",
      "Bash(then echo \"=== .env file exists ===\")",
      "Bash(else echo \".env file not found\")",
      "Bash(fi)",
      "Bash(taskkill:*)",
      "Bash(npx next build)",
      "Bash(then grep -v \"DATABASE_URL\\|DIRECT_URL\\|NEXTAUTH_SECRET\\|RESEND_API_KEY\" .env)",
      "Bash(git add:*)"
